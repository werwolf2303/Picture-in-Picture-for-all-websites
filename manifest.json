{

  "manifest_version": 2,
  "name": "Picture in Picure",
  "version": "1.0",

  "description": "Picture in Picture for all Websites",

  "icons": {
    "48": "pip.png"
  },
  "background": {
      "persisent": false,
      "scripts": ["enabler.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+P",
        "mac": "Alt+P",
        "chromeos": "Alt+P",
        "linux": "Alt+P"
      }
    }
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ]
}